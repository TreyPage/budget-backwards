  <EditText
    android:id="@+id/rent_box"
    android:layout_width="100sp"
    android:layout_height="wrap_content"
    android:layout_marginTop="40sp"
    android:fontFamily="@font/cutive"
    android:hint="Rent"
    android:textAlignment="center"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/intro_instructions"/>

  <TextView
    android:id="@+id/intro_instructions"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="150sp"
    android:fontFamily="@font/cutive"
    android:text="Let's start by adding in your rent/mortgage expense."
    android:textAlignment="center"
    android:textSize="40sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />


</androidx.constraintlayout.widget.ConstraintLayout>